<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_margin="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Judul Buku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etxtJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Penuliis Buku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etxtPenulis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Deskripsi Buku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etxtDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Stock Buku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etxtStok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnSave"
        android:background="@drawable/btn_round_primary"
        android:textColor="@color/colorPrimary"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="Save Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>